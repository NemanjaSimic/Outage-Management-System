<?xml version="1.0" encoding="utf-8" ?>
<configuration>
  <startup> 
    <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
  </startup>
  
  <connectionStrings>
    <add name="LoggerName" connectionString="TransactionManagerServiceHost"/>
  </connectionStrings>
  
  <system.serviceModel>
    <services>
      <!-- Transaction Coordinator -->
      <service behaviorConfiguration="TM.ServiceBehavior"
               name="Outage.TransactionManagerService.DistributedTransaction">
        <endpoint address="TransactionCoordinator/"
                  binding="netTcpBinding"
                  contract="Outage.Common.ServiceContracts.DistributedTransaction.ITransactionCoordinatorContract"
                  bindingConfiguration="netTcpBindingNoSecurity">
          <identity>
            <dns value="localhost"/>
          </identity>
        </endpoint>

        <!-- Transaction Enlistment -->
        <endpoint address="TransactionEnlistment/"
                  binding="netTcpBinding"
                  contract="Outage.Common.ServiceContracts.DistributedTransaction.ITransactionEnlistmentContract"
                  bindingConfiguration="netTcpBindingNoSecurity">
          <identity>
            <dns value="localhost"/>
          </identity>
        </endpoint>
        <host>
          <baseAddresses>
            <add baseAddress="net.tcp://localhost:10000/TransactionManagerService/"/>
          </baseAddresses>
        </host>
      </service>
    </services>

    <client>
      <!-- SCADA Transaction Actor Client -->
      <endpoint address="net.tcp://localhost:10001/SCADAService/TransactionActor/"
                behaviorConfiguration="SCADA.ClientBehavior"
                binding="netTcpBinding"
                bindingConfiguration="netTcpBindingNoSecurity"
                contract="Outage.Common.ServiceContracts.DistributedTransaction.ITransactionActorContract"
                name="SCADATransactionActorEndpoint">
        <identity>
          <dns value="localhost"/>
        </identity>
      </endpoint>
      
      <!-- NMS Transaction Actor Client -->
      <endpoint address="net.tcp://localhost:10002/NetworkModelService/TransactionActor/"
                behaviorConfiguration="NMS.ClientBehavior"
                binding="netTcpBinding"
                bindingConfiguration="netTcpBindingNoSecurity"
                contract="Outage.Common.ServiceContracts.DistributedTransaction.ITransactionActorContract"
                name="NetworkModelServiceTransactionActorEndpoint">
        <identity>
          <dns value="localhost"/>
        </identity>
      </endpoint>

      <!-- CE Transaction Actor Client -->
      <endpoint address="net.tcp://localhost:10003/CalculationEngineService/TransactionActor/"
                behaviorConfiguration="CE.ClientBehavior"
                binding="netTcpBinding"
                bindingConfiguration="netTcpBindingNoSecurity"
                contract="Outage.Common.ServiceContracts.DistributedTransaction.ITransactionActorContract"
                name="CalculationEngineTransactionActorEndpoint">
        <identity>
          <dns value="localhost"/>
        </identity>
      </endpoint>
    </client>
    
    <bindings>
      <netTcpBinding>
        <binding name="netTcpBindingNoSecurity" 
                 closeTimeout="00:30:00" 
                 openTimeout="00:30:00" 
                 sendTimeout="00:10:00" 
                 receiveTimeout="10:30:00" 
                 maxBufferSize="2147483647" 
                 maxReceivedMessageSize="2147483647">
          <readerQuotas maxStringContentLength="2147483647" maxArrayLength="2147483647"/>
          <security mode="None">
            <transport clientCredentialType="None" protectionLevel="None"/>
          </security>
        </binding>
      </netTcpBinding>
    </bindings>

    <behaviors>
      <serviceBehaviors>
        <behavior name="TM.ServiceBehavior">
          <serviceMetadata httpGetEnabled="false"/>
          <serviceThrottling maxConcurrentCalls="1000" 
                             maxConcurrentSessions="1000" 
                             maxConcurrentInstances="1000"/>
          <serviceDebug includeExceptionDetailInFaults="true"/>
        </behavior>
      </serviceBehaviors>

      <endpointBehaviors>
        <behavior name="NMS.ClientBehavior">
          <clientCredentials supportInteractive="false">
            <windows allowNtlm="true" allowedImpersonationLevel="Impersonation"/>
          </clientCredentials>
          <dataContractSerializer maxItemsInObjectGraph="2147483647"/>
        </behavior>

        <behavior name="SCADA.ClientBehavior">
          <clientCredentials supportInteractive="false">
            <windows allowNtlm="true" allowedImpersonationLevel="Impersonation"/>
          </clientCredentials>
          <dataContractSerializer maxItemsInObjectGraph="2147483647"/>
        </behavior>

        <behavior name="CE.ClientBehavior">
          <clientCredentials supportInteractive="false">
            <windows allowNtlm="true" allowedImpersonationLevel="Impersonation"/>
          </clientCredentials>
          <dataContractSerializer maxItemsInObjectGraph="2147483647"/>
        </behavior>
      </endpointBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>