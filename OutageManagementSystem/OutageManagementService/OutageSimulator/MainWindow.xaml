<Window x:Class="OMS.OutageSimulator.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:OMS.OutageSimulator"
        xmlns:controls="clr-namespace:OMS.OutageSimulator.UserControls"
        mc:Ignorable="d"
        Title="MainWindow" Height="620" Width="640">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="10"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="10"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="10"/>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="10"/>
        </Grid.ColumnDefinitions>
        <TabControl  x:Name="TabControl" Grid.Row="1" Grid.Column="1">
            <TabItem Header="Overwiew">
                <Grid>
                    <controls:ActiveOutages/>
                </Grid>
            </TabItem>
            <TabItem Header="Generate Outage">
                <Grid>
                    <controls:GenerateOutage/>
                </Grid>
            </TabItem>

        </TabControl>
    </Grid>
</Window>
