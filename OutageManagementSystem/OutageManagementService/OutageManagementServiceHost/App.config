<?xml version="1.0" encoding="utf-8" ?>
<configuration>
    <startup> 
        <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8" />
    </startup>
  <appSettings>
    <add key="TimerInterval" value="50000"/>
    <add key="ExpectedCalls" value="3"/>
  </appSettings>
  <connectionStrings>
    <add name="LoggerName" connectionString="OutageManagementServiceHost"/>
  </connectionStrings>

  <system.serviceModel>
    <services>
      <!--Outage Contract-->
      <service behaviorConfiguration="OutageManagementService.ServiceBehavior"
               name="OutageManagementService.Outage.OutageService">
        <endpoint address=""
                  binding="netTcpBinding"
                  contract="Outage.Common.ServiceContracts.OMS.IOutageContract"
                  bindingConfiguration="netTcpBindingNoSecurity">
          <identity>
            <dns value="localhost"/>
          </identity>
        </endpoint>
        <host>
          <baseAddresses>
            <add baseAddress="net.tcp://localhost:10005/OutageManagementService/Outage/"/>
          </baseAddresses>
        </host>
      </service>
    </services>

    <client>
      <endpoint address="net.tcp://localhost:10003/CalculationEngineService/TopologyServiceContract/"
                behaviorConfiguration="CE.ClientBehavior"
                binding="netTcpBinding"
                bindingConfiguration="netTcpBindingNoSecurity"
                contract="Outage.Common.ServiceContracts.ITopologyServiceContract"
                name="TopologyServiceEndpoint">
        <identity>
          <dns value="localhost"/>
        </identity>
      </endpoint>

      <!-- Publisher Client -->
      <endpoint address="net.tcp://localhost:10004/PubSubEngine/Publisher/"
                behaviorConfiguration="PUBSUB.ClientBehavior"
                binding="netTcpBinding"
                bindingConfiguration="netTcpBindingNoSecurity"
                contract="Outage.Common.ServiceContracts.PubSub.IPublisher"
                name="PublisherEndpoint">
        <identity>
          <dns value="localhost"/>
        </identity>
      </endpoint>

      <!-- Subcriber Client -->
      <endpoint address="net.tcp://localhost:10004/PubSubEngine/Subscriber/"
                behaviorConfiguration="PUBSUB.ClientBehavior"
                binding="netTcpBinding"
                bindingConfiguration="netTcpBindingNoSecurity"
                contract="Outage.Common.ServiceContracts.PubSub.ISubscriber"
                name="SubscriberEndpoint">
        <identity>
          <dns value="localhost"/>
        </identity>
      </endpoint>
    </client>
    
    

    <bindings>
      <netTcpBinding>
        <binding name="netTcpBindingNoSecurity"
                 closeTimeout="00:30:00"
                 openTimeout="00:30:00"
                 sendTimeout="00:10:00"
                 receiveTimeout="10:30:00"
                 maxBufferSize="2147483647"
                 maxReceivedMessageSize="2147483647">
          <readerQuotas maxStringContentLength="2147483647" maxArrayLength="2147483647"/>
          <security mode="None">
            <transport clientCredentialType="None" protectionLevel="None"/>
          </security>
        </binding>
      </netTcpBinding>
    </bindings>


    <behaviors>
      <serviceBehaviors>
        <behavior name="OutageManagementService.ServiceBehavior">
          <serviceMetadata httpGetEnabled="false"/>
          <serviceThrottling maxConcurrentCalls="1000"
                             maxConcurrentSessions="1000"
                             maxConcurrentInstances="1000"/>
          <serviceDebug includeExceptionDetailInFaults="true"/>
        </behavior>
      </serviceBehaviors>

      <endpointBehaviors>
        <behavior name="CE.ClientBehavior">
          <clientCredentials supportInteractive="false">
            <windows allowNtlm="true" allowedImpersonationLevel="Impersonation"/>
          </clientCredentials>
          <dataContractSerializer maxItemsInObjectGraph="2147483647"/>
        </behavior>


        <behavior name="PUBSUB.ClientBehavior">
          <clientCredentials supportInteractive="false">
            <windows allowNtlm="true" allowedImpersonationLevel="Impersonation"/>
          </clientCredentials>
          <dataContractSerializer maxItemsInObjectGraph="2147483647"/>
        </behavior>
      </endpointBehaviors>
    </behaviors>
  </system.serviceModel>
</configuration>