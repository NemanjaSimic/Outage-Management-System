<?xml version="1.0" encoding="utf-8"?>
<configuration>
  <startup> 
      <supportedRuntime version="v4.0" sku=".NETFramework,Version=v4.8"/>
  </startup>

  <connectionStrings>
    <add name="loggerName" connectionString="SCADAServiceHost"/>
  </connectionStrings>

  <system.serviceModel>
    <client>
      <!-- Network Model Service Client-->
      <endpoint address="net.tcp://localhost:10000/NetworkModelService/GDA/" 
                behaviorConfiguration="NMSClientBehavior" 
                binding="netTcpBinding" 
                bindingConfiguration="netTcpBindingNoSecurity" 
                contract="Outage.ServiceContracts.INetworkModelGDAContract" 
                name="NetworkModelGDAEndpoint">
        <identity>
          <dns value="localhost"/>
        </identity>
      </endpoint>
    </client>

    <bindings>
      <netTcpBinding>
        <binding name="netTcpBindingNoSecurity" 
                 closeTimeout="00:30:00" 
                 openTimeout="00:30:00" 
                 sendTimeout="00:10:00" 
                 receiveTimeout="10:30:00" 
                 maxBufferSize="2147483647" 
                 maxReceivedMessageSize="2147483647">
          <readerQuotas maxStringContentLength="2147483647" maxArrayLength="2147483647"/>
          <security mode="None">
            <transport clientCredentialType="None" protectionLevel="None"/>
          </security>
        </binding>
      </netTcpBinding>
    </bindings>

    <behaviors>
      <endpointBehaviors>
        <behavior name="NMSClientBehavior">
          <clientCredentials supportInteractive="false">
            <windows allowNtlm="true" allowedImpersonationLevel="Impersonation"/>
          </clientCredentials>
          <dataContractSerializer maxItemsInObjectGraph="2147483647"/>
        </behavior>
      </endpointBehaviors>
    </behaviors>

  </system.serviceModel>

  <appSettings>
    <add key="TcpPort" value="502"/>
    <add key="UnitAddress" value="1"/>
    <add key="ServiceAddress" value="net.tcp://localhost:10001/ScadaService"/>
  </appSettings>
</configuration>
